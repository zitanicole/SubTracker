@model SubTracker.capstone_Kellogg.Models.ViewBalanceViewModel

@{
    ViewData["Title"] = "View Balance";
}

<form asp-action="ViewBalance" method="get">
    <div class="form-group">
        <label for="accountId">Select Account:</label>
        <select asp-for="AccountId" asp-items="Model.Accounts" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">View Balance</button>
</form>


<h2>Account Balance</h2>
<p><strong>Current Balance:</strong> @Model.CurrentBalance.ToString("C")</p>

<hr />

<h4>Recent Transactions</h4>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Type</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.RecentTransactions)
        {
            <tr>
                <td>@transaction.Date.ToShortDateString()</td>
                <td>@transaction.Type</td>
                <td>@transaction.Amount.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
